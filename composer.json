{
    "name": "phptoon/phptoon",
    "description": "PHP implementation of TOON (Token-Oriented Object Notation) - a compact, LLM-optimized encoding format",
    "keywords": ["toon", "json", "llm", "encoding", "token-optimization", "laravel"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "phpstan/phpstan": "^1.10",
        "orchestra/testbench": "^9.0",
        "laravel/framework": "^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "PhpToon\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PhpToon\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PhpToon\\Laravel\\ToonServiceProvider"
            ],
            "aliases": {
                "Toon": "PhpToon\\Laravel\\Facades\\Toon"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
